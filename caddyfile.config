app.pepchat.com.br, www.app.pepchat.com.br {

    # Servir React build
    root * /var/www/pepchat/frontend/build
    file_server
    encode gzip zstd

    # Redirecionar tudo para index.html (React Router)
    try_files {path} /index.html

    # Cache estático (JS, CSS, imagens)
    @static {
        path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # API Backend
    @api path /api/*
    reverse_proxy @api localhost:8080 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
        header_up Cookie {header.Cookie}
    }

    # Auth Backend
    @auth path /api/auth/*
    reverse_proxy @auth localhost:8080 {
        header_up Host {host}
        header_up Cookie {header.Cookie}
        header_up Access-Control-Allow-Credentials "true"
        header_down Cache-Control "no-cache, no-store, must-revalidate"
        header_down Pragma "no-cache"
        header_down Expires "0"
    }

    # WebSocket (Socket.IO)
    @socket path /socket.io/*
    reverse_proxy @socket localhost:8080 {
        header_up Host {host}
        header_up Connection {header.Connection}
        header_up Upgrade {header.Upgrade}
        header_up Cookie {header.Cookie}
    }

    # Webhooks
    @webhook path /webhook/*
    reverse_proxy @webhook localhost:8080 {
        header_up Host {host}
    }

    # Segurança
    respond /.env 403
    respond /*.log 403
    respond /*.sql 403
    respond /*.bak 403

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Erros personalizados
    handle_errors {
        @500 expression {http.error.status_code} == 500
        rewrite @500 /50x.html
        file_server
    }
}
